<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AddPerson">


    <TextView
        android:text=" Nrº Aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_nraluno"

      />

    <TextView
        android:text="Data de Nascimento: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_data_nascimento"
        android:layout_above="@+id/Btn_limpar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp" />

    <TextView
        android:text="Nome:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_Nome_aluno"
        android:layout_below="@+id/TextView_nraluno"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:text="Sexo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_sexo"
        android:layout_above="@+id/Btn_limpar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Adicionar Informações"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_adicionar_info"
        android:layout_above="@+id/btn_back1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Adicionar Encarregado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_adicionar_enc"
        android:layout_above="@+id/btn_adicionar_info"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/TextView_Nome_aluno"
        android:layout_alignParentEnd="true"
        android:id="@+id/edittext_Nomealuno" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/textView_data_nascimento"
        android:layout_alignStart="@+id/edittext_Nomealuno"
        android:id="@+id/edittext_data_de_nascimento" />

    <Button
        android:text="Retroceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back1"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/edittext_nr_aluno"
        android:layout_alignParentStart="true" />

    <Button
            android:text="Adicionar ALuno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addAluno"
        android:layout_above="@+id/btn_adicionar_enc"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Limpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_limpar"
        android:layout_above="@+id/btn_addAluno"
        android:layout_alignEnd="@+id/btn_back1"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edittext_sexo"
        android:layout_alignTop="@+id/textView_sexo"
        android:layout_toEndOf="@+id/textView_sexo"
        android:layout_marginStart="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edittext_nr_aluno"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView_data_nascimento" />

</RelativeLayout>